<%= form_for @classified, html: { multipart: true } do |f| %>
  <% if @classified.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@classified.errors.count, "error") %> prohibited
        this classified from being saved:
      </h2>
      <ul>
        <% @classified.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: 'form-control' %>
  </fieldset>

  <fieldset class='form-group'>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.submit @classified.new_record? ? 'Create classified' : 'Update classified', class: "btn btn-primary" %>
  </fieldset>
<% end %>